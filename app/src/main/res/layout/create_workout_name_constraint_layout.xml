<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
      style="@style/ToolbarStyle"/>


    <ImageView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:id="@+id/selectedImage"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/weightlifting_placeholder1"
        android:layout_height="250dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@color/cardview_dark_background"
        android:id="@+id/findImageButton"
        app:layout_constraintBottom_toBottomOf="@+id/selectedImage"
        app:layout_constraintTop_toBottomOf="@+id/selectedImage"
        android:src="@drawable/ic_camera_enhance_black_24dp"
        app:layout_constraintRight_toRightOf="@+id/selectedImage"
        app:layout_constraintLeft_toLeftOf="@+id/selectedImage"
        app:layout_constraintHorizontal_bias="0.89" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/selectedImage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.13"
        android:id="@+id/textInput"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent">

        <EditText
            android:id="@+id/workoutNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Workout Name" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="Continue"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:id="@+id/createWorkoutButton"
        style="@style/Widget.AppCompat.Button.Colored"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textInput"
        app:layout_constraintVertical_bias="0.16"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>