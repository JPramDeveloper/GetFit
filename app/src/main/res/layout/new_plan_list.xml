<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/workoutTitle"
        android:background="#fff"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Workout Title"/>
    <TextView
        android:layout_width="match_parent"
        android:minHeight="0dp"
        android:background="#fff"
        android:maxHeight="150dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:text="This is where the description text will go
        This is where the description text will goThis is where the description text will go"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:id="@+id/workoutDescription"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="15dp"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/expandColapse"
        android:background="@drawable/colapse_long"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="No Exercises Found"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="5dp"
            android:layout_marginBottom="50dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="5dp"/>
        <Button
            android:id="@+id/createWorkoutButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="@dimen/buttonMakePlan"
            android:layout_alignParentBottom="true"
            android:background="@color/prettyBlue"

            android:layout_centerHorizontal="true"
            android:text="Create Workout" />

    </RelativeLayout>



</LinearLayout>