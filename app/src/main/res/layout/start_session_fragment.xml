<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.StartWorkout.start_session">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"

        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:textSize="18sp"
        android:text="Select A workout"
        android:layout_marginTop="10dp"
        android:id="@+id/section_text"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="320dp"
        android:id="@+id/divider1"
        android:layout_marginBottom="10dp"
        android:layout_height="5dp"
        android:background="@color/prettyBlue"/>
   <Spinner
       android:layout_width="260dp"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"
       android:layout_gravity="center_horizontal"
       android:id="@+id/workoutSelectionSpinner"
       android:layout_height="60dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:text="Select A Day"
            android:layout_marginTop="10dp"
            android:id="@+id/exerciseText"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/selectDayLinearLayout"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="320dp"
            android:id="@+id/divider2"
            android:layout_marginBottom="10dp"
            android:layout_height="5dp"
            android:background="@color/prettyBlue"/>
        <Spinner
            android:layout_width="260dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ExerciseSpinnerSelector"
            android:layout_height="60dp"/>
        </LinearLayout>
    <Button
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_below="@id/workoutSelectionSpinner"
        android:layout_centerHorizontal="true"
        android:background="@color/prettyBlue"
        android:enabled="false"
        android:textSize="18sp"
        android:layout_marginTop="35dp"
        android:id="@+id/startWorkoutButton"
        android:text="Start Workout"/>
    </LinearLayout>


</RelativeLayout>
