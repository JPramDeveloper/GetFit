<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" android:id="@+id/toolbar"/>
    <ImageView
        android:layout_below="@id/toolbar"
        android:layout_margin="15dp"
        android:id="@+id/selectedImage"
        android:layout_width="match_parent"
        android:src="@drawable/lifting_man"
        android:layout_height="@dimen/imageHeight" />
    <android.support.design.widget.TextInputLayout
        android:layout_below="@id/selectedImage"
        android:layout_height="wrap_content"
        android:id="@+id/textinput"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent">

        <EditText
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/workoutNameEditText"
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            xmlns:tools="http://schemas.android.com/tools"
            android:hint="Enter workout name"/>
    </android.support.design.widget.TextInputLayout>



    <Button
        android:id="@+id/findImageButton"
        android:layout_width="200dp"
        android:layout_below="@id/textinput"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_centerHorizontal="true"
        android:text="Upload Image"/>

    <Button
        android:layout_below="@id/findImageButton"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_height="50dp"
        android:text="Create Workout"
        android:id="@+id/createWorkoutButton"/>




</RelativeLayout>